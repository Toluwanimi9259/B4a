<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewSelectImage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="0"
                android:layout_marginStart="6dp"
                app:srcCompat="@drawable/baseline_person_24" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_weight="0"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="username" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="240dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/baseline_more_horiz_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewCaptionXX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="italic|normal"
            android:text="Yo Guys Check Out the BRAND NEW OPPO PHONE" />

        <ImageView
            android:id="@+id/imageViewFeedXX"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/oppo" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>